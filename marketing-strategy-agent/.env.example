# Marketing Strategy Agent Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values

# OpenAI Configuration
# Required: Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# TiDB Database Configuration
# Required: Get credentials from https://tidbcloud.com/
TIDB_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your_tidb_username
TIDB_PASSWORD=your_tidb_password
TIDB_DATABASE=your_database_name
TIDB_SSL_DISABLED=false

# Vector Store Configuration
VECTOR_TABLE_NAME=marketing_knowledge
VECTOR_DIMENSION=1536
VECTOR_DISTANCE_STRATEGY=cosine

# Application Configuration
APP_NAME="Marketing Strategy Agent"
APP_VERSION=1.0.0
APP_DESCRIPTION="AI-powered marketing strategy and content generation platform"
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["json", "txt", "csv", "md", "pdf"]
UPLOAD_DIR=data/uploads
EXPORT_DIR=data/exports

# Knowledge Base Configuration
KNOWLEDGE_BASE_PATH=data/knowledge_base
AUTO_LOAD_KNOWLEDGE=true
KNOWLEDGE_REFRESH_INTERVAL_HOURS=24

# LangChain Configuration (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=marketing-strategy-agent

# Workflow Configuration
MAX_WORKFLOW_DURATION_MINUTES=30
WORKFLOW_TIMEOUT_SECONDS=1800
MAX_CONCURRENT_WORKFLOWS=10

# Content Generation Limits
MAX_CONTENT_LENGTH=5000
MAX_CALENDAR_DAYS=90
MAX_SOCIAL_POSTS_PER_REQUEST=50

# Analytics Configuration
ANALYTICS_ENABLED=true
METRICS_RETENTION_DAYS=90
PERFORMANCE_MONITORING=true

# External APIs (Optional)
# Social Media APIs for enhanced content optimization
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
GOOGLE_API_KEY=your_google_api_key
SERPAPI_KEY=your_serpapi_key
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
METRICS_ENDPOINT_ENABLED=true

# Background Tasks
BACKGROUND_TASKS_ENABLED=true
TASK_QUEUE_SIZE=100
WORKER_CONCURRENCY=4

# Data Retention
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30
TEMP_FILE_CLEANUP_HOURS=24

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_COLLABORATION=false
FEATURE_A_B_TESTING=true
FEATURE_CUSTOM_TEMPLATES=true

# Integration Settings (Optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/marketing-agent
WEBHOOK_SECRET=your_webhook_secret

# Database Connection Pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT_SECONDS=30

# Redis Configuration (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=backups/

# Development & Testing
TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATA_ENABLED=true

# Compliance & Privacy
DATA_PRIVACY_MODE=standard
PII_DETECTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Performance Tuning
REQUEST_TIMEOUT_SECONDS=120
MAX_REQUEST_SIZE_MB=50
COMPRESSION_ENABLED=true
GZIP_COMPRESSION_LEVEL=6

# Logging Configuration
LOG_FILE_PATH=./logs/marketing_agent.log
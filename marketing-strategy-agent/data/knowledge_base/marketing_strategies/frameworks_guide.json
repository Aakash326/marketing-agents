    {
      "name": "STP Framework (Segmentation, Targeting, Positioning)",
      "description": "A strategic approach to identify and communicate with your most valuable customers",
      "components": {
        "Segmentation": {
          "definition": "Divide your broader market into distinct groups of consumers with common characteristics",
          "types": [
            {
              "type": "Demographic",
              "factors": ["Age", "Gender", "Income", "Education", "Occupation", "Family size"]
            },
            {
              "type": "Geographic", 
              "factors": ["Region", "City size", "Climate", "Population density"]
            },
            {
              "type": "Psychographic",
              "factors": ["Lifestyle", "Values", "Personality", "Interests", "Opinions"]
            },
            {
              "type": "Behavioral",
              "factors": ["Purchase behavior", "Usage rate", "Brand loyalty", "Benefits sought"]
            },
            {
              "type": "Firmographic (B2B)",
              "factors": ["Company size", "Industry", "Revenue", "Location", "Technology usage"]
            }
          ],
          "process": [
            "Collect customer data through surveys, interviews, and analytics",
            "Identify patterns and commonalities",
            "Group customers with similar characteristics",
            "Validate segments with statistical analysis",
            "Ensure segments are measurable, accessible, and actionable"
          ]
        },
        "Targeting": {
          "definition": "Evaluate and select the most attractive market segments to focus your marketing efforts",
          "strategies": [
            {
              "strategy": "Undifferentiated Marketing",
              "description": "Target the entire market with one marketing mix",
              "best_for": "Mass market products with broad appeal"
            },
            {
              "strategy": "Differentiated Marketing", 
              "description": "Target multiple segments with tailored marketing mixes",
              "best_for": "Companies with resources to manage multiple campaigns"
            },
            {
              "strategy": "Concentrated Marketing",
              "description": "Focus on a single, well-defined segment",
              "best_for": "Niche products or companies with limited resources"
            },
            {
              "strategy": "Micromarketing",
              "description": "Customize marketing to individual customers or local areas",
              "best_for": "High-value customers or location-specific businesses"
            }
          ],
          "evaluation_criteria": [
            "Segment size and growth potential",
            "Competitive intensity",
            "Segment accessibility and reachability",
            "Company resources and capabilities",
            "Segment profitability",
            "Strategic fit with company objectives"
          ]
        },
        "Positioning": {
          "definition": "Create a distinct image and identity for your brand in the minds of your target customers",
          "positioning_statement_template": "For [target audience], [brand] is the [category] that [differentiation] because [reasons to believe]",
          "positioning_strategies": [
            {
              "strategy": "Attribute-based positioning",
              "description": "Focus on specific product features or attributes",
              "example": "Volvo positions on safety features"
            },
            {
              "strategy": "Benefit-based positioning",
              "description": "Emphasize the benefits customers receive",
              "example": "FedEx positions on reliability ('When it absolutely, positively has to be there overnight')"
            },
            {
              "strategy": "Use-based positioning",
              "description": "Position based on how/when the product is used",
              "example": "Gatorade positions as a sports drink for athletes"
            },
            {
              "strategy": "User-based positioning",
              "description": "Position for specific types of users",
              "example": "Nike positions for serious athletes"
            },
            {
              "strategy": "Competitive positioning",
              "description": "Position relative to competitors",
              "example": "Avis positioned as '#2, we try harder'"
            },
            {
              "strategy": "Quality/Price positioning",
              "description": "Position on value proposition",
              "example": "Walmart positions on 'Everyday Low Prices'"
            }
          ]
        }
      }
    },
    {
      "name": "Marketing Mix (4Ps Framework)",
      "description": "The fundamental framework for marketing decision-making covering Product, Price, Place, and Promotion",
      "components": {
        "Product": {
          "definition": "What you're selling - the goods or services that satisfy customer needs",
          "considerations": [
            "Core product benefits",
            "Product features and attributes",
            "Product design and quality",
            "Brand name and packaging",
            "Product line breadth and depth",
            "Product lifecycle stage",
            "Warranty and after-sales service"
          ],
          "strategies": [
            "New product development",
            "Product differentiation",
            "Product positioning",
            "Product line extension",
            "Product modification",
            "Product elimination"
          ]
        },
        "Price": {
          "definition": "How much customers pay for your product or service",
          "pricing_strategies": [
            {
              "strategy": "Cost-plus pricing",
              "description": "Add markup to product costs",
              "best_for": "Stable cost environments"
            },
            {
              "strategy": "Value-based pricing",
              "description": "Price based on perceived customer value",
              "best_for": "Differentiated products with clear benefits"
            },
            {
              "strategy": "Competitive pricing",
              "description": "Price relative to competitors",
              "best_for": "Commoditized markets"
            },
            {
              "strategy": "Penetration pricing",
              "description": "Low initial price to gain market share",
              "best_for": "New market entry"
            },
            {
              "strategy": "Skimming pricing",
              "description": "High initial price, lower over time",
              "best_for": "Innovative products with early adopters"
            },
            {
              "strategy": "Dynamic pricing",
              "description": "Prices change based on demand and conditions",
              "best_for": "Digital products and services"
            }
          ],
          "factors": [
            "Production costs",
            "Competitor pricing",
            "Customer perceived value",
            "Market demand",
            "Brand positioning",
            "Distribution costs",
            "Legal and regulatory constraints"
          ]
        },
        "Place": {
          "definition": "How and where customers can access your product or service",
          "distribution_channels": [
            {
              "type": "Direct channels",
              "examples": ["Company website", "Physical stores", "Sales team", "Mobile apps"],
              "advantages": ["Higher margins", "Better customer control", "Direct customer relationships"],
              "disadvantages": ["Higher investment", "Limited reach", "More complex logistics"]
            },
            {
              "type": "Indirect channels",
              "examples": ["Retailers", "Wholesalers", "Distributors", "Online marketplaces"],
              "advantages": ["Broader reach", "Lower investment", "Leveraged expertise"],
              "disadvantages": ["Lower margins", "Less control", "Potential channel conflicts"]
            },
            {
              "type": "Hybrid channels",
              "examples": ["Multi-channel approach", "Omnichannel strategy"],
              "advantages": ["Maximum reach", "Customer choice", "Risk diversification"],
              "disadvantages": ["Channel management complexity", "Potential conflicts"]
            }
          ],
          "considerations": [
            "Target customer preferences",
            "Product characteristics",
            "Geographic coverage needs",
            "Cost and margin implications",
            "Competitive distribution strategies",
            "Channel partner capabilities",
            "Technology and logistics requirements"
          ]
        },
        "Promotion": {
          "definition": "How you communicate with customers about your product or service",
          "promotional_mix": [
            {
              "tool": "Advertising",
              "description": "Paid, non-personal communication through media",
              "types": ["TV", "Radio", "Print", "Digital display", "Social media ads", "Outdoor"],
              "best_for": "Building awareness, reaching large audiences"
            },
            {
              "tool": "Sales Promotion",
              "description": "Short-term incentives to encourage purchase",
              "types": ["Coupons", "Discounts", "Contests", "Samples", "Loyalty programs"],
              "best_for": "Driving immediate sales, encouraging trial"
            },
            {
              "tool": "Public Relations",
              "description": "Building favorable public image and handling unfavorable rumors/events",
              "types": ["Press releases", "Media relations", "Event sponsorship", "Corporate social responsibility"],
              "best_for": "Building credibility, managing reputation"
            },
            {
              "tool": "Personal Selling",
              "description": "Face-to-face interaction between seller and buyer",
              "types": ["Sales meetings", "Trade shows", "Product demonstrations"],
              "best_for": "Complex products, relationship building, B2B sales"
            },
            {
              "tool": "Direct Marketing",
              "description": "Direct communication with targeted individual customers",
              "types": ["Email marketing", "Direct mail", "Telemarketing", "SMS marketing"],
              "best_for": "Personalized messaging, measurable results"
            },
            {
              "tool": "Digital Marketing",
              "description": "Online promotional activities",
              "types": ["SEO", "Content marketing", "Social media", "Influencer marketing", "PPC"],
              "best_for": "Precise targeting, real-time optimization, cost-effectiveness"
            }
          ]
        }
      }
    },
